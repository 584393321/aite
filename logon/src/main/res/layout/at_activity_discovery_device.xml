<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_add_device" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="1002px"
        android:layout_height="108px"
        android:layout_gravity="center"
        android:layout_marginTop="3px"
        android:background="@drawable/selector_147px_f2f2f2_eeeeee">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/at_common_ico_shousuo"
            android:drawablePadding="6px"
            android:text="@string/at_search_device"
            android:textColor="@color/_BBBBBB"
            android:textSize="42px" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        app:tabIndicatorHeight="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/_F5F5F5" />

    <com.aliyun.ayland.widget.ATCustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>