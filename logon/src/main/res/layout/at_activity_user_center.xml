<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_setting" />

    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:layout_marginTop="6px"
        android:background="@drawable/bt_open_curtain_selector"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_profile"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <com.aliyun.ayland.widget.ATMyCircleImageView
            android:id="@+id/img_userprofile"
            android:layout_width="162px"
            android:layout_height="162px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_height="3px"
        android:background="@color/_F0F0F0" />

    <RelativeLayout
        android:id="@+id/rl_nick"
        android:layout_width="match_parent"
        android:layout_height="162px"
        android:background="@drawable/bt_open_curtain_selector"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_nick"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/img_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/atico_junp" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_nick"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_height="3px"
        android:background="@color/_F0F0F0" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="162px"
        android:background="@drawable/bt_open_curtain_selector"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_phone2"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/atico_junp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_phone"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_height="3px"
        android:background="@color/_F0F0F0" />

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="162px"
        android:background="@drawable/bt_open_curtain_selector"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_email"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/atico_junp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_email"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_height="3px"
        android:background="@color/_F0F0F0" />
</LinearLayout>