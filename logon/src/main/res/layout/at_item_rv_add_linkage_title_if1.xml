<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:text="@string/at_linkage_name"
        android:textColor="@color/_333333"
        android:layout_marginLeft="45px"
        android:textSize="54px"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24px"
        android:background="@drawable/selector_12px_f5f5f5_eeeeee"
        android:paddingLeft="45px"
        android:paddingRight="24px"
        android:layout_height="192px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="192px"
            android:gravity="center_vertical"
            android:hint="@string/at_input_linkage_name1"
            android:maxLength="15"
            android:textColor="@color/_333333"
            android:textColorHint="@color/_CCCCCC"
            android:textSize="42px" />

        <RelativeLayout
            android:layout_width="138px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_138px_e9e9e9"
            android:layout_height="138px">

            <ImageView
                android:id="@+id/img"
                android:layout_centerInParent="true"
                android:layout_width="102px"
                android:layout_height="102px"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="72px"
        android:text="@string/at_if_"
        android:textColor="@color/_333333"
        android:textSize="54px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:text="@string/at_satisfy_any_of_the_following_trigger_conditions"
        android:textColor="@color/_999999"
        android:textSize="39px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:layout_marginTop="24px"
        android:background="@drawable/shape_12px_3pxf0f0f0"
        android:layout_height="192px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_manual_trigger"
            android:textColor="@color/_333333"
            android:textSize="42px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/at_default"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>
</LinearLayout>