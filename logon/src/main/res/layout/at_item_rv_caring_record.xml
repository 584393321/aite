<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30px"
    android:layout_marginLeft="39px"
    android:layout_marginRight="39px"
    android:background="@drawable/selector_12px_f5f5f5_eeeeee"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="45px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/_333333"
            android:textSize="48px" />

        <TextView
            android:id="@+id/tv_personType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@id/tv_personName"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/_999999"
            android:textSize="36px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/_333333"
        android:textSize="42px" />
</LinearLayout>