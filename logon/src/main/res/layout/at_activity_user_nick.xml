<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/at_set_name"
        android:textSize="54px"
        android:textColor="@color/_333333"
        android:textStyle="bold"
        android:layout_marginTop="45px"
        android:layout_marginLeft="45px"/>

    <com.aliyun.ayland.widget.ATClearEditText
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="162px"
        android:layout_marginTop="36px"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:background="@drawable/shape_12px_3pxf0f0f0"
        android:textColorHint="@color/_CCCCCC"
        android:hint="@string/at_input_nick"
        android:maxLength="15"
        android:padding="45px"
        android:textColor="@color/_333333"
        android:textSize="45px" />
</LinearLayout>