<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="749px"
            android:scaleType="fitXY"
            android:src="@drawable/at_bg_s_wode" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54px"
                android:text="@string/at_mine"
                android:textColor="@color/_131415"
                android:textSize="66px" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="36px"
                android:src="@drawable/at_btn_guanbi" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="208px"
            android:orientation="horizontal">

            <com.aliyun.ayland.widget.ATMyCircleImageView
                android:id="@+id/img_user"
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/at_pho_s_mine_touxiang"
                android:layout_margin="45px" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42px"
                android:textColor="@color/_6B6357"
                android:textSize="48px" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="555px"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_message_center"
            android:layout_width="match_parent"
            android:layout_height="166px"
            android:background="@drawable/selector_transparent">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:src="@drawable/at_icon_s_xiaoxizhongxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="201px"
                android:text="@string/at_message_center"
                android:textColor="@color/_746957" />

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48px"
                android:src="@drawable/atico_junp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_switch_room"
            android:layout_width="match_parent"
            android:layout_height="166px"
            android:background="@drawable/selector_transparent">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:src="@drawable/at_icon_s_qiehuanfangjian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="201px"
                android:text="@string/at_switch_room"
                android:textColor="@color/_746957" />

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48px"
                android:src="@drawable/atico_junp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_family_manage"
            android:layout_width="match_parent"
            android:layout_height="166px"
            android:background="@drawable/selector_transparent">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:src="@drawable/at_icon_s_jiatingguanli_a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="201px"
                android:text="@string/at_family_manage"
                android:textColor="@color/_746957" />

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48px"
                android:src="@drawable/atico_junp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_car_manage"
            android:layout_width="match_parent"
            android:layout_height="166px"
            android:visibility="gone"
            android:background="@drawable/selector_transparent">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:src="@drawable/at_icon_me_wojisdeche" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="201px"
                android:text="@string/at_car_manage"
                android:textColor="@color/_746957" />

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48px"
                android:src="@drawable/atico_junp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>