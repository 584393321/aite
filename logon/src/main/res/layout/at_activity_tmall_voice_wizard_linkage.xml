<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="36px"
        android:textColor="@color/_333333"
        android:textSize="66px" />

    <TextView
        android:id="@+id/tv_linkage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="168px"
        android:textColor="@color/_666666"
        android:textSize="48px" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="288px"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:layout_marginTop="45px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33px"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:drawablePadding="24px"
                android:drawableLeft="@drawable/shape_3px_12px45px_fda448"
                android:text="@string/at_morning_model"
                android:textColor="@color/white"
                android:textSize="51px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:src="@drawable/atico_junp_w" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="885px"
        android:layout_height="144px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="183px"
        android:textColor="@color/white"
        android:textSize="51px" />
</LinearLayout>