<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="204px"
    android:layout_marginBottom="30px"
    android:paddingLeft="39px"
    android:paddingRight="39px"
    android:background="@drawable/selector_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="138px"
        android:layout_height="138px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="189px"
        android:layout_marginTop="36px"
        android:ellipsize="end"
        android:maxWidth="540px"
        android:textColor="@color/_333333"
        android:textSize="45px" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="189px"
        android:layout_marginRight="33px"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/_999999"
        android:textSize="39px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33px"
        android:layout_marginTop="30px"
        android:textColor="@color/_999999"
        android:textSize="36px" />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="189px"
        android:background="@color/_F0F0F0"
        android:layout_height="3px"/>
</RelativeLayout>