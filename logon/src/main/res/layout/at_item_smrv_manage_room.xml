<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="162px"
    android:layout_marginLeft="39px"
    android:layout_marginRight="39px"
    android:background="@drawable/shape_12px_eeeeee">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="78px"
        android:layout_height="78px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45px"
        android:src="@drawable/atico_glfj_shanchu" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/_333333"
        android:layout_marginLeft="45px"
        android:layout_toRightOf="@id/img_delete"
        android:textSize="48px" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="78px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45px"
        android:src="@drawable/at_ico_glfj_yidong" />
</RelativeLayout>