<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_timing"/>

    <RelativeLayout
        android:id="@+id/rl_trigger_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_marginLeft="39px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:visibility="gone"
        android:layout_marginRight="39px"
        android:background="@drawable/shape_12px_f5f5f5">

        <LinearLayout
            android:id="@+id/ll_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="290px"
            android:text="时"
            android:textColor="@color/_333333"
            android:textSize="51px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="753px"
            android:text="分"
            android:textColor="@color/_333333"
            android:textSize="51px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="162px"
            android:layout_marginTop="60px"
            android:background="@drawable/shape_12px_f5f5f5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:text="@string/at_all_day"
                android:textColor="@color/_333333"
                android:textSize="45px" />

            <!--            <com.aliyun.ayland.widget.ATSwitchView-->
            <!--                android:id="@+id/switchview"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:layout_marginRight="36px"-->
            <!--                app:hasShadow="false"-->
            <!--                app:isOpened="true" />-->

            <com.aliyun.ayland.widget.ATSwitchButton
                android:id="@+id/switchview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="42px"
                app:kswBackColor="@color/at_ksw_md_back_color"
                app:kswThumbDrawable="@drawable/ksw_md_thumb"
                app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
                app:kswThumbMarginBottom="-6dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-6dp"
                app:kswThumbRangeRatio="1.45"
                app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30px"
            android:orientation="vertical"
            android:background="@drawable/shape_12px_f5f5f5"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_begin"
                android:layout_width="match_parent"
                android:layout_height="162px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="45px"
                    android:text="@string/at_begin"
                    android:textColor="@color/_333333"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_begin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45px"
                    android:text="@string/at__0_o_clock"
                    android:textColor="@color/_86523C"
                    android:textSize="42px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_begin_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="45px"
                android:paddingRight="45px"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_begin_timing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="290px"
                    android:text="时"
                    android:textColor="@color/_333333"
                    android:textSize="51px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="753px"
                    android:text="分"
                    android:textColor="@color/_333333"
                    android:textSize="51px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="45px"
                android:background="@color/_EAEAEA" />

            <RelativeLayout
                android:id="@+id/rl_end"
                android:layout_width="match_parent"
                android:layout_height="162px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="45px"
                    android:text="@string/at_end"
                    android:textColor="@color/_333333"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45px"
                    android:text="@string/at__24_o_clock"
                    android:textColor="@color/_86523C"
                    android:textSize="42px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_end_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="45px"
                android:paddingRight="45px"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_end_timing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="290px"
                    android:text="时"
                    android:textColor="@color/_333333"
                    android:textSize="51px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="753px"
                    android:text="分"
                    android:textColor="@color/_333333"
                    android:textSize="51px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_repeat"
        android:layout_width="match_parent"
        android:layout_height="162px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:background="@drawable/selector_12px_f5f5f5_eeeeee">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_repeat"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/atico_junp" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100px"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="每天"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>
</LinearLayout>