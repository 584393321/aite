<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:background="@drawable/selector_12px_fafaf9_eeeeee">

    <ImageView
        android:id="@+id/img_scene"
        android:layout_width="102px"
        android:layout_height="102px"
        android:layout_marginLeft="45px"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_marginLeft="183px"
        android:maxLines="1"
        android:textColor="@color/_333333"
        android:textSize="48px" />

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="42px"
        android:paddingRight="42px">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="126px"
            android:layout_height="126px"
            android:layout_centerInParent="true"
            android:src="@drawable/at_icon_s_ld_shoudongkaiqi"
            android:visibility="gone" />

        <com.aliyun.ayland.widget.ATCircleLoadingAnimotion
            android:id="@+id/circle_bar"
            android:layout_width="126px"
            android:layout_height="126px"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:bar_width="5px" />

        <ImageView
            android:id="@+id/img_start_success"
            android:layout_width="126px"
            android:layout_height="126px"
            android:layout_centerInParent="true"
            android:src="@drawable/at_icon_s_ld_shoudongkaiqi_ok"
            android:visibility="gone" />
    </RelativeLayout>
    <!--<com.aliyun.ayland.widget.SwitchView-->
    <!--android:id="@+id/switchview"-->
    <!--android:layout_width="132px"-->
    <!--android:layout_height="132px"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginRight="42px"-->
    <!--android:visibility="gone"-->
    <!--app:hasShadow="false"-->
    <!--app:isOpened="true" />-->

    <com.aliyun.ayland.widget.ATSwitchButton
        android:id="@+id/switchview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="42px"
        android:visibility="gone"
        app:kswBackColor="@color/at_ksw_md_back_color"
        app:kswThumbDrawable="@drawable/ksw_md_thumb"
        app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
        app:kswThumbMarginBottom="-6dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-6dp"
        app:kswThumbRangeRatio="1.45"
        app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />
</RelativeLayout>