<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="42px"
        android:background="@color/_EEEEEE" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_marginLeft="42px"
        android:layout_marginTop="62px">

        <com.aliyun.ayland.widget.ATMyCircleImageView
            android:id="@+id/img_portrait"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@drawable/at_pho_s_mine_touxiang" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="460px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="159px"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/_584F42"
            android:textSize="45px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="159px"
            android:textColor="@color/_999999"
            android:textSize="33px" />

        <RelativeLayout
            android:layout_width="500px"
            android:layout_marginRight="42px"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_together"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/at_ic_h_yiguanzhu"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/_999999"
                android:textSize="33px" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="32px"
        android:textColor="@color/_333333"
        android:textSize="42px" />

    <com.aliyun.ayland.widget.ninegridimageview.ATNineGridImageView
        android:id="@+id/nineGridImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="18px"
        android:visibility="gone"
        app:imgGap="30px"
        app:showStyle="grid"
        app:singleImgSize="604px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12px"
        android:layout_marginLeft="26px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/at_icon_bj_xiaoxi"
            android:drawablePadding="4px"
            android:gravity="center"
            android:padding="16px"
            android:textColor="@color/_D8D8D8"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73px"
            android:drawableLeft="@drawable/at_icon_bj_like"
            android:drawablePadding="4px"
            android:gravity="center"
            android:padding="16px"
            android:textColor="@color/_D8D8D8"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/img_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="89px"
            android:padding="16px"
            android:src="@drawable/at_ic_h_toushu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21px"
        android:layout_marginLeft="42px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/at_comment_"
            android:textColor="@color/_EBB080"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tv_write_comment"
            android:layout_width="720px"
            android:layout_height="90px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_51px_f3f3f3_e6e6e6"
            android:gravity="center_vertical"
            android:paddingLeft="69px"
            android:text="@string/at_write_commment"
            android:textColor="@color/_CCCCCC"
            android:textSize="39px" />
    </LinearLayout>
</LinearLayout>