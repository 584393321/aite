<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="243px"
    android:background="@color/_F5F5F5">

    <View
        android:layout_width="match_parent"
        android:background="@color/_EAEAEA"
        android:layout_marginLeft="45px"
        android:layout_height="3px"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="102px"
        android:layout_height="102px"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="39px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="186px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="600px"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:textColor="@color/_999999"
            android:textSize="36px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="45px">

        <com.aliyun.ayland.widget.ATSwitchButton
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:kswBackColor="@color/at_ksw_md_back_color"
            app:kswThumbDrawable="@drawable/ksw_md_thumb"
            app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
            app:kswThumbMarginBottom="-6dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-6dp"
            app:kswThumbRangeRatio="1.45"
            app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />
    </LinearLayout>
</RelativeLayout>