<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="306px"
    android:layout_height="306px"
    android:layout_marginRight="39px"
    android:background="@drawable/shape_18px_fafaf9"
    android:elevation="10px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="102px"
        android:layout_height="102px"
        android:layout_marginTop="54px"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/_333333"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:textSize="42px" />

    <ImageView
        android:id="@+id/img_add_delete"
        android:layout_alignParentRight="true"
        android:layout_width="81px"
        android:layout_height="81px"
        android:src="@drawable/atico_glfj_jiaru" />
</RelativeLayout>