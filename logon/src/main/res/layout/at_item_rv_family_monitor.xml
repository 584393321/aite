<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="39px"
    android:layout_marginRight="39px"
    android:layout_marginTop="60px"
    android:layout_marginBottom="24px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="102px"
            android:layout_marginLeft="6px"
            android:layout_height="102px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="132px"
            android:maxWidth="543px"
            android:textColor="@color/_333333"
            android:textSize="51px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_off_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6px"
            android:textSize="42px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="@drawable/shape_12px_f5f5f5"
        android:layout_marginTop="24px">

        <LinearLayout
            android:id="@+id/ll_alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.aliyun.ayland.widget.ATSwitchButton
                android:id="@+id/sb_alarm_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswBackColor="@color/at_ksw_md_back_color"
                app:kswThumbDrawable="@drawable/ksw_md_thumb"
                app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
                app:kswThumbMarginBottom="-6dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-6dp"
                app:kswThumbRangeRatio="1.45"
                app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/at_alarm_switch"
                android:layout_marginTop="36px"
                android:textColor="@color/_666666"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_motion_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="348px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.aliyun.ayland.widget.ATSwitchButton
                android:id="@+id/sb_motion_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswBackColor="@color/at_ksw_md_back_color"
                app:kswThumbDrawable="@drawable/ksw_md_thumb"
                app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
                app:kswThumbMarginBottom="-6dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-6dp"
                app:kswThumbRangeRatio="1.45"
                app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/at_check_switch"
                android:layout_marginTop="36px"
                android:textColor="@color/_666666"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_motion_sensitivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_motion_sensitivity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ksw_md_thumb_ripple_size"
                android:gravity="center"
                android:textSize="39px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/at_check_sensitivity"
                android:layout_marginTop="36px"
                android:textColor="@color/_666666"
                android:textSize="36px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>