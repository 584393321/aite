<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="306px"
    android:layout_height="450px"
    android:layout_marginRight="39px"
    android:background="@drawable/at_bg_huangse"
    android:elevation="10px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginTop="96px"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="276px"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:layout_marginLeft="39px"
        android:layout_marginRight="39px"
        android:textSize="48px"/>

    <ImageView
        android:id="@+id/img_add_delete"
        android:layout_alignParentRight="true"
        android:layout_width="81px"
        android:layout_height="81px"
        android:src="@drawable/at_ico_yy_yidong" />
</RelativeLayout>