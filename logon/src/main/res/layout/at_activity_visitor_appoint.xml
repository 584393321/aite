<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_visitor_appoint"/>

    <com.aliyun.ayland.widget.ATObservableScrollView
        android:id="@+id/observableScrollView"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="162px"
                android:layout_marginTop="27px"
                android:paddingLeft="45px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="45px">

                <TextView
                    android:layout_width="279px"
                    android:layout_height="wrap_content"
                    android:text="@string/at_name_"
                    android:textColor="@color/_666666"
                    android:textSize="42px" />

                <EditText
                    android:id="@+id/et_visitor_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/at_input_visitors_name"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:textColor="@color/_333333"
                    android:textColorHint="@color/_DDDDDD"
                    android:textSize="45px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="45px"
                android:background="@color/_F0F0F0" />

            <LinearLayout
                android:id="@+id/ll_dismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="45px"
                    android:paddingRight="45px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_phone"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <EditText
                        android:id="@+id/et_visitor_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="number"
                        android:gravity="center_vertical"
                        android:hint="@string/at_input_visitor_phone_number"
                        android:maxLength="11"
                        android:textColor="@color/_333333"
                        android:textColorHint="@color/_DDDDDD"
                        android:textSize="45px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:background="@color/_F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="45px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_visit_room"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <LinearLayout
                        android:id="@+id/ll_visitor_room"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_visitor_room"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/at_select_visit_room"
                            android:textColor="@color/_DDDDDD"
                            android:textSize="45px" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="45px"
                    android:background="@color/_F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="45px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_visit_time"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <LinearLayout
                        android:id="@+id/ll_visite_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_visite_time"
                            android:layout_width="621px"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="45px"
                            android:src="@drawable/atico_junp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="45px"
                    android:background="@color/_F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="45px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_leave_time"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <LinearLayout
                        android:id="@+id/ll_leave_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_leave_time"
                            android:layout_width="621px"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="45px"
                            android:src="@drawable/atico_junp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:background="@color/_F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:paddingLeft="45px"
                    android:paddingRight="57px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/at_is_intermediary_agent_"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <RadioGroup
                        android:id="@+id/rg_agent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_agent_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:text="@string/at_yes"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <RadioButton
                            android:id="@+id/rb_agent_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="162px"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:gravity="center"
                            android:text="@string/at_no"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />
                    </RadioGroup>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="45px"
                    android:background="@color/_F0F0F0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:paddingLeft="45px"
                    android:paddingRight="57px">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/at_is_motors_"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <RadioGroup
                        android:id="@+id/rg_motors"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_motors_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:gravity="center"
                            android:text="@string/at_yes"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <RadioButton
                            android:id="@+id/rb_motors_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="162px"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:gravity="center"
                            android:text="@string/at_no"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />
                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_plate"
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:paddingLeft="45px"
                    android:paddingRight="45px"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/_F0F0F0" />

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/plate_number"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <RelativeLayout
                        android:id="@+id/rl_plate_numbers"
                        android:layout_width="204px"
                        android:layout_height="90px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_3px_3px_cccccc"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_plate_number"
                            android:layout_width="120px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="粤"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <ImageView
                            android:id="@+id/img_plate_numbers_arrow"
                            android:layout_width="84px"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/_EBB080"
                            android:scaleType="center"
                            android:src="@drawable/atonline_info_triangle" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_plate_numbers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="279px"
                        android:layout_marginRight="210px"
                        android:gravity="center_vertical"
                        android:maxLength="10"
                        android:text="@string/at_input_plate_number"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/_F0F0F0" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_park"
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="45px"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="279px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_park"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <LinearLayout
                        android:id="@+id/ll_visite_park"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="45px"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_visite_park"
                            android:layout_width="621px"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/at_select_park"
                            android:textColor="@color/_DDDDDD"
                            android:textSize="45px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/atico_junp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="45px"
                    android:background="@color/_F0F0F0" />

                <RelativeLayout
                    android:id="@+id/rl_fee"
                    android:layout_width="match_parent"
                    android:layout_height="162px"
                    android:paddingLeft="45px"
                    android:paddingRight="57px"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/at_will_pay_for_visitor"
                        android:textColor="@color/_666666"
                        android:textSize="42px" />

                    <RadioGroup
                        android:id="@+id/rg_park_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_park_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:gravity="center"
                            android:text="@string/at_yes"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <RadioButton
                            android:id="@+id/rb_park_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="162px"
                            android:button="@null"
                            android:drawableLeft="@drawable/at_selector_checkbox"
                            android:drawablePadding="18px"
                            android:gravity="center"
                            android:text="@string/at_no"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />
                    </RadioGroup>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginLeft="45px"
                    android:background="@color/_F0F0F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_statement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="84px"
                        android:gravity="center_horizontal"
                        android:textColor="@color/_666666"
                        android:textSize="36px" />

                    <Button
                        android:id="@+id/btn_subscribe"
                        android:layout_width="885px"
                        android:layout_height="144px"
                        android:layout_marginBottom="370px"
                        android:layout_marginTop="42px"
                        android:background="@drawable/selector_72px_86523c_b5a198"
                        android:gravity="center"
                        android:text="@string/at_make_appointment"
                        android:textColor="@color/white"
                        android:textSize="51px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.aliyun.ayland.widget.ATObservableScrollView>
</LinearLayout>