<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="996px"
        android:layout_height="494px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="17px"
        android:layout_marginTop="17px"
        android:background="@drawable/selector_12px_ffffff_e6e6e6"
        android:elevation="10px"
        android:orientation="vertical"
        android:paddingLeft="45px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="90px"
                android:layout_height="90px" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:textColor="@color/_333333"
                android:textSize="45px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="202px"
                android:layout_height="wrap_content"
                android:text="@string/at_address_"
                android:textColor="@color/_999999"
                android:textSize="38px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="202px"
                android:layout_height="wrap_content"
                android:text="@string/at_subject_"
                android:textColor="@color/_999999"
                android:textSize="38px" />

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="202px"
                android:layout_height="wrap_content"
                android:text="@string/at_plan_"
                android:textColor="@color/_999999"
                android:textSize="38px" />

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="202px"
                android:layout_height="wrap_content"
                android:text="@string/at_gym_"
                android:textColor="@color/_999999"
                android:textSize="38px" />

            <TextView
                android:id="@+id/tv_gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="38px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>