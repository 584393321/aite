<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="177px"
    android:background="@drawable/bt_open_curtain_selector"
    android:clickable="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_device"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42px" />

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="220px"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="环境电器"
        android:textColor="@color/_333333"
        android:textSize="42px" />

        <ImageView
            android:id="@+id/img_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/atico_junp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-16px"
            android:background="@color/_EEEEEE" />
</RelativeLayout>