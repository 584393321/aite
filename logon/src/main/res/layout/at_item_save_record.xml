<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bt_open_curtain_selector"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_thumbnail"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:layout_marginRight="31px" >

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="130px"
            android:layout_height="130px"
            />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="70px"
            android:layout_height="75px"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/ic_video_play" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:layout_toRightOf="@id/rl_thumbnail"
        android:textColor="@color/_4A4A4A"
        android:textSize="42px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25px"
        android:layout_toRightOf="@id/rl_thumbnail"
        android:textColor="@color/_828282"
        android:textSize="36px" />

    <ImageButton
        android:id="@+id/img_cellphone"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackground"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:src="@drawable/at_village_cellphone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="2px"
        android:layout_marginLeft="29px"
        android:background="@color/_E0E0E0" />
</RelativeLayout>