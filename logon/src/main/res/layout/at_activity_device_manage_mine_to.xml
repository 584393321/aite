<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="57px"
        android:layout_marginLeft="60px"
        android:textSize="72px"
        android:text="@string/at_enter_accept_phone"
        android:textStyle="bold"
        android:textColor="@color/_333333"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:layout_height="168px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="138px"
        android:background="@drawable/shape_12pxf7f7f7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:text="@string/at__86"
            android:textColor="@color/_333333"
            android:textSize="54px" />

        <View
            android:layout_width="3px"
            android:layout_height="96px"
            android:layout_marginLeft="45px"
            android:background="@color/_EEEEEE" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/at_input"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="45px"
            android:textColor="@color/_333333"
            android:textColorHint="@color/_DDDDDD"
            android:textSize="45px" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="840px"
        android:layout_height="144px"
        android:layout_marginTop="174px"
        android:background="@drawable/selector_72px_ffb176fda448_efcdaaeeb67d"
        android:text="@string/at_submit"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="51px" />
</LinearLayout>