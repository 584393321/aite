<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="192px"
    android:layout_marginBottom="30px"
    android:background="@drawable/shape_12px_3pxeeeeee_fdfdfd"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45px"
        android:ellipsize="end"
        android:maxWidth="600px"
        android:textColor="@color/_333333"
        android:textSize="45px" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="39px"
        android:clickable="false"
        android:button="@drawable/at_selector_checkbox" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="33px"
        android:layout_toLeftOf="@id/checkBox"
        android:textColor="@color/_999999"
        android:textSize="39px" />
</RelativeLayout>