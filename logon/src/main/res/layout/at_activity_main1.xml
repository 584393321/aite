<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="150px"/>

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/at_main_background_line"
        android:layout_height="150px"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="首页"
            android:drawableTop="@drawable/selector_home_tab"
            android:drawablePadding="3px"
            android:textColor="@color/at_selector_87523c_a0a0a0"
            android:textSize="30px" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="邻里"
            android:drawableTop="@drawable/selector_home_tab1"
            android:drawablePadding="3px"
            android:textColor="@color/at_selector_87523c_a0a0a0"
            android:textSize="30px" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="汇生活"
            android:drawableTop="@drawable/selector_home_tab2"
            android:drawablePadding="26px"
            android:textColor="@color/at_selector_87523c_a0a0a0"
            android:textSize="30px" />

        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:drawableTop="@drawable/selector_home_tab3"
            android:drawablePadding="3px"
            android:text="管家"
            android:textColor="@color/at_selector_87523c_a0a0a0"
            android:textSize="30px" />

        <RadioButton
            android:id="@+id/rb_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:drawableTop="@drawable/selector_home_tab4"
            android:drawablePadding="3px"
            android:text="智能"
            android:textColor="@color/at_selector_87523c_a0a0a0"
            android:textSize="30px" />
    </RadioGroup>
</RelativeLayout>