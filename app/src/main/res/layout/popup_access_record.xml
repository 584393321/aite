<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="810px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="45px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:text="@string/type_"
                android:textColor="@color/_999999"
                android:textSize="39px" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_overtime"
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:background="@drawable/selector_18px_e0f1ff_f3f3f3"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/stay_overtime"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:layout_marginLeft="114px"
                    android:background="@drawable/selector_18px_e0f1ff_f3f3f3"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/not_visit"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />

                <RadioButton
                    android:id="@+id/rb_has"
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:layout_marginLeft="114px"
                    android:background="@drawable/selector_18px_e0f1ff_f3f3f3"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/at_visited"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="54px"
                android:background="@color/_F1F1F1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51px"
                android:text="@string/actual_time_of_visit"
                android:textColor="@color/_999999"
                android:textSize="39px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="48px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="450px"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_45px_f3f3f3"
                    android:gravity="center"
                    android:text="@string/at_select_visit_time"
                    android:textColor="@color/_BBBBBB"
                    android:textSize="42px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="39px"
                    android:text="@string/at_to"
                    android:textColor="@color/_999999"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="450px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="39px"
                    android:background="@drawable/shape_45px_f3f3f3"
                    android:gravity="center"
                    android:text="@string/at_select_leave_time"
                    android:textColor="@color/_BBBBBB"
                    android:textSize="42px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px">

                <Button
                    android:id="@+id/button"
                    android:layout_width="420px"
                    android:layout_height="135px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_66px_1478c8_005395"
                    android:gravity="center"
                    android:text="@string/at_sure"
                    android:textColor="@color/white"
                    android:textSize="51px" />

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60px"
                    android:background="@drawable/selector_transparent"
                    android:drawableLeft="@drawable/at_zhihui_ico_refresh"
                    android:drawablePadding="5px"
                    android:gravity="center_vertical"
                    android:text="@string/reset"
                    android:textColor="@color/_86523C" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>